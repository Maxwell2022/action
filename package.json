{
  "name": "@volta-cli/action",
  "version": "1.4.3",
  "private": true,
  "description": "Setup volta for usage in your CI runs",
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/volta-cli/action.git"
  },
  "license": "MIT",
  "author": "Robert Jackson <me@rwjblue.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm-run-all build:clean build:ts build:dist",
    "build:clean": "rimraf dist lib",
    "build:dist": "ncc build src/index.ts",
    "build:ts": "tsc",
    "lint": "npm-run-all lint:*",
    "lint:files": "eslint --cache .",
    "lint:types": "tsc --noEmit",
    "test": "jest"
  },
  "dependencies": {},
  "devDependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.3",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.3.3",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@types/semver": "^7.1.0",
    "@types/uuid": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "@zeit/ncc": "^0.22.0",
    "broccoli-test-helper": "^2.0.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "execa": "^4.0.0",
    "find-up": "^4.1.0",
    "got": "^10.7.0",
    "jest": "^25.2.3",
    "jest-circus": "^25.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "release-it": "^13.4.0",
    "release-it-lerna-changelog": "^2.1.1",
    "rimraf": "^3.0.2",
    "semver": "^7.1.3",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3",
    "uuid": "^7.0.2",
    "walk-sync": "^2.0.2"
  },
  "release-it": {
    "hooks": {
      "after:bump": "npm run build"
    },
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": {
      "publish": false
    }
  }
}
